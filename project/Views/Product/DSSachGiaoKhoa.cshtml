@model IEnumerable<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "Họa Cụ Online";
    Layout = null; // Hoặc để Layout nhóm mày vào đây
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Họa Cụ - Bootstrap Mix CSS</title>
    <link rel="stylesheet" href="~/css/menunho.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>

    <div class="container-chinh">
        <div class="khu-vuc-noi-dung">

            <aside class="cot-trai">
                <div class="menu-list">
                    <div class="menu-header">Dụng Cụ Vẽ</div>
                    <ul>
                        <li><a href="#">Sách giáo khoa</a></li>
                        <li><a href="#">Màu Vẽ & Mực Vẽ</a></li>
                        <li><a href="#">Sách Dạy Vẽ</a></li>
                        <li><a href="#">Bộ Dụng Cụ Vẽ</a></li>
                        <li><a href="#">Giấy Vẽ Canson & Sổ Ký Họa</a></li>
                        <li><a href="#">Dụng Cụ Mỹ Thuật Khác</a></li>
                    </ul>
                </div>

            </aside>

            <main class="cot-phai">

                <div class="thanh-loc">
                    <select class="select-box">
                        <option>Sắp xếp: Mới nhất</option>
                        <option>Giá: Thấp đến Cao</option>
                        <option>Giá: Cao đến Thấp</option>
                    </select>
                </div>

                <div class="luoi-san-pham">
                    @foreach (var item in Model)
                    {
                        <div class="the-san-pham">
                            <img src="@item.ImageUrl" class="anh-sp">

                            <div class="thong-tin-sp">
                                <div class="hang-sx">@item.Brand</div>
                                <a href="#" class="ten-sp" title="@item.Name">@item.Name</a>
                                <div class="gia-tien">@item.Price.ToString("#,##0") đ</div>
                            </div>
                        </div>
                    }
                </div>

            </main>
        </div>
    </div>
</body>
</html>