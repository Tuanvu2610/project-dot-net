<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BookStore</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="bg-dark text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📚 BookStore</h4>
            <nav>
                <a class="text-white me-3" href="/">Trang chủ</a>
                <a class="text-white me-3" href="/Book">Quản lý sách</a>
                <a class="text-white" href="/Account/Login">Đăng nhập</a>
            </nav>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-center p-3 mt-5">
        © 2025 - Đồ án quản lý nhà sách
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
